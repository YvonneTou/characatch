<div class="container my-5"></div>
  <div class="row mt-5">
    <div class="col-9">
      <div class="d-flex justify-content-between">
        <h1>Edit your booking with <%= @booking.listing.mascot_name %></h1>
      </div>
    </div>
  </div>
  <div class="row row-col-6">
    <div class="col-9">
      <%= simple_form_for @booking, url: listing_booking_path do |f| %>
        <div class="d-flex">
          <%= f.input :start_time, label: 'Start Time', as: :datetime, html5: true %>
          <%= f.input :end_time, label: 'End Time', as: :datetime, html5: true %>
        </div>
        <%= f.input :comment, label: 'Details or requests for this booking', as: :text %>
        <%= f.input :event_type, as: :radio_buttons, label: 'Occasion', collection: %i(Birthday Proposal Wedding Funeral Other)  %>
        <%= f.input :event_address, label: 'Event Address', as: :text %>
        <%= f.button :submit, class: "btn btn-success" %>
        <%= link_to listing_path(@booking.listing) do %>
          <button type="button" class="btn btn-primary">View Mascot Details</button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
