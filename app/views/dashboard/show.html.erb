<h1>Welcome <%= current_user.nickname %>!</h1>
<div class="d-flex mt-4" style="gap: 50px;">
  <div class="col-8">
    <h3>My Bookings</h3>
    <% @user_bookings.each do |booking| %>
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action" aria-current="true">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">Mascot: <%= booking.listing.mascot_name %></h5>
            <small><%= booking.start_time.strftime("%m/%d/%Y at %I:%M%p") %></small>
          </div>
          <p class="mb-1"><i class="fa-solid fa-calendar"></i>   <%= booking.event_type %> | Comments: <%= booking.comment %></p>
          <small>   <%= booking.event_address %></small>
          <em><small>Status: <%= booking.status %></small></em>
        </a>
      </div>
    <% end %>
    <div class="my-4">
      <h3>My Mascots Jobs</h3>
      <% @user_listings.each do |listing| %>
        <div>
          <% listing.bookings.each do |booking| %>
            <div class="list-group">
              <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Mascot: <%= booking.listing.mascot_name %></h5>
                  <small><%= booking.start_time.strftime("%m/%d/%Y at %I:%M%p") %></small>
                </div>
                <p class="mb-1"><i class="fa-solid fa-calendar"></i>  <%= booking.event_type %> | Comments: <%= booking.comment %></p>
                <small><i class="fa-solid fa-location-dot"></i>   <%= booking.event_address %></small>
                <em><small>Status: <%= booking.status %></small></em>
              </a>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-4">
    <h3>My Mascots</h3>
    <%= link_to new_listing_path do %>
      <button type="button" class="btn btn-primary mb-3">New Mascot</button>
    <% end %>
    <div class="row col-auto">
      <% @user_listings.each do |listing| %>
          <div class="col-6"><%= cl_image_tag listing.photo.key, width:100, height: 150, crop: :fill %></div>
      <% end %>
    </div>
  </div>
</div>
