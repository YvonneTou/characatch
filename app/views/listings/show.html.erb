<div class="container">
  <div class="d-flex mt-4" style="gap: 50px;">
    <div class="col-8">
      <div class="d-flex justify-content-between">
        <%= cl_image_tag(@listing.photo.key, alt: @listing.mascot_name.titleize, class: "col-3")%>
        <div>
          <h1><%= @listing.mascot_name %></h1>
          <p class="m-0"><i class="fa-solid fa-location-dot"></i> <%= @listing.location %></p>
          <p><i class="fa-solid fa-money-bill"></i> <%= @listing.rate_usd %></p>
          <h3><%= @listing.title %></h2>
          <p><%= @listing.description %></p>
        </div>
      </div>

      <div class="mt-5">
        <h3>Reviews</h3>
        <!-- <% if user_signed_in? %>
        <%= link_to "Write a review", new_listing_review_path(@listing), class:"btn btn-primary m-3" %>
        <% end %> -->

        <ul class="list-group left-stroke-blue">
          <% if @listing.reviews.count > 0 %>
            <% @listing.reviews.each do |review| %>
              <li class="list-group-item">
                <span class="review-star"><%= icon('fa-solid', 'star') * review.rating %></span><br>
                <%= review.content %><br>
                <strong><%= review.user.nickname %></strong>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item">No Reviews</li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-3 form-border">
      <h2 class="text-blue">Book <%= @listing.mascot_name %> now!</h2>
      <%= simple_form_for [@listing, @booking] do |f| %>
        <%= render 'bookings/form', article: [@listing, @booking] %>
      <% end %>    </div>
  </div>
</div>
