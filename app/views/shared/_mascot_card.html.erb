  <div class="row gy-5">
    <% @listings.each do |listing| %>
      <div class="col">
        <%= link_to(listing_path(listing), class: "card-links") do %>
          <div class="card bottom-stroke-red text-decoration-none" style="width: 18rem;">
            <%= cl_image_tag(listing.photo.key, height: 200, aspect_ratio: "1.0", crop: "fit") %>
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text">Meet <strong><%= listing.mascot_name %></strong>, based in <%= listing.location %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
